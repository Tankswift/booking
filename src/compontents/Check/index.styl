#Check{
    width 100vw
    height 100vh
    position fixed
    z-index: 99
    background: rgba(0,0,0,0.56)
    top 0
    left 0  
    bottom 0
    right 0
    .Box{
      z-index: 999
      position relative
      top 49.3vw
      left 15.5vw
      width 69.3vw
      height 70.1vw
      border-radius:2.1vw;
      background:rgba(255,255,255,1) 
      padding:6.5vw 8.7vw 0
      box-sizing: border-box
      .border1{
        width 24.3vw
        height 1.6vw
        background rgba(255,198,56,1)
        position absolute
        left: 0
        right 0
        margin 0 auto 
        top:10vw
      }
      .border2{
          width 27.5vw
          height 1.6vw
          background rgba(255,198,56,1)
          position absolute
          left: 0
          right 0
          margin 0 auto 
          top:10vw
        }
      .title{
        text-align: center
        font-size:4vw;
        font-family:Microsoft YaHei;
        font-weight:bold;
        color:rgba(51,51,51,1);
        line-height:4.3vw; 
        position relative    
        z-index 999
     }
     .formBox{
       margin-top:11.7vw
       .item_top{
         display: flex
         align-items: center
         padding-bottom: 2.5vw  
         border-bottom:1px solid rgba(153,153,153,1)
        input {
          border: 0
          width:24vw
          font-size:3.2vw;
          font-family:Microsoft YaHei;
          font-weight:400;
          color:rgba(153,153,153,1);
          line-height:4.3vw;
          padding-left: 1.7vw
        }
           .getCode{
                width  17vw
                height 7.7vw
                background:linear-gradient(0deg,rgba(254,179,54,1) 0%,rgba(255,198,56,1) 100%)
                border-radius:2.1vw
                font-size:2.9vw;
                font-family:Microsoft YaHei;
                font-weight:400;
                color:rgba(255,255,255,1);
                line-height:4.3vw;
                text-align: center;
                line-height: 7.7vw;
                padding: 0 0.2vw
                box-sizing: border-box
                flex-shrink: 0
             }
             
        }
      }
      .nextStep{
        width 34.7vw
        height 10.1vw
        background:linear-gradient(0deg,rgba(254,179,54,1) 0%,rgba(255,198,56,1) 100%);
        border-radius:4.8vw
        margin: 0 auto
        margin-top: 8vw
        text-align: center
        line-height: 10.1vw
        font size 3.7vw;
        font-family:Microsoft YaHei;
        font-weight:bold;
        color:rgba(255,255,255,1);
        text-shadow:0px 3px 7px rgba(234,155,24,0.52);  
      } 
    }
    .close{
      img {
         width 3.7vw
         height 3.7vw
         display inline-block
      }
      position absolute
      right: 3.6vw
      top: 3.1vw
        
    }
}