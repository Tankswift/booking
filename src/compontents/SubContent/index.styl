#SubContent{
    margin-top:1.3vw
    width 100vw
    height 42.9vw
    background:rgba(255,255,255,1)
    padding: 2.9vw 0 0 5.2vw
    box-sizing: border-box
    .title{
        width 86vw
        
        font-size:3.7vw
        font-family:Microsoft YaHei;
        font-weight:bold;
        color:rgba(51,51,51,1);
        line-height:4.8vw;
    }
    .des{
        margin-top: 2.5vw
        width 80.5vw
        font-family:Microsoft YaHei;
        font-weight:400;
        font-size: 3.2vw
        color:rgba(102,102,102,1);
        line-height:4.8vw
        overflow:hidden
        white-space:nowrap
        text-overflow:ellipsis
    }
    .time{
        margin-top 4vw
        display: flex
        align-items: center
        .time_left{
            vertical-align: middle;
            display inline-block
            width 2.5vw
            height 2.5vw 
            margin-right 2.3vw
        }
        .time_right{
            display inline-block
            font-size: 2.9vw
            font-family:Microsoft YaHei;
            font-weight:400;
            color:rgba(153,153,153,1);
        }
    }
    .place{
        margin-top 2.1vw
        display: flex
        align-items: center
        .time_left{
            vertical-align: middle;
            display inline-block
            width 2.5vw
            height 2.5vw 
            margin-right 2.3vw
        }
        .time_right{
            display inline-block
            font-size: 2.9vw
            font-family:Microsoft YaHei;
            font-weight:400;
            color:rgba(153,153,153,1);
        }
    }
    .number_submit{
        margin-top:2.4vw
        font-size: 2.9vw
        font-family:Microsoft YaHei;
        font-weight:400;
        color:rgba(234,79,50,1) 
        display: flex
        justify-content: space-between
        padding:0 5.6vw 0 0
        .number{
            display: flex
            align-items: center
            .number_left{
                margin-right: 1.3vw
            }
            .number_right{
                text-align: center
                height 4.8vw
                background:rgba(234,79,50,1)
                border-radius:0.8vw
                font-size:3.2vw;
                font-weight:400;
                color:rgba(255,255,255,1);
                border-radius:.8vw;
                line-height: 4.8vw
                padding:.5vw 1.5vw
            }
        }
        .button{
            width 22.9vw
            height 7.5vw
            background:linear-gradient(-77deg,rgba(255,198,56,1) 0%,rgba(254,179,54,1) 100%)
            border-radius:3.5vw  
            margin-right:5.6vw
            display: flex
            justify-content: space-around
            align-items: center
            box-sizing: border-box
            padding: 0 2vw 0 3.2vw
            box-shadow: 0 0.5vw 1vw  rgba(0,0,0,0.5);
            span{
                font-size:2.9vw;
                font-family:Microsoft YaHei;
                font-weight:bold;
                color:rgba(255,255,255,1);
                text-shadow:0px 3px 7px rgba(204,155,0,0.52);
            }
            img {
                display inline-block
                width 4.8vw
                height 4.1vw
            }
        }
    }
}

