#Code{
    width 100vw
    height 100vh
    position fixed
    z-index: 99
    background: rgba(0,0,0,0.56)
    top 0
    left 0  
    bottom 0
    right 0
    .Box{
        z-index: 999
        position relative
        top 49.3vw
        left 15.5vw
        width 69.3vw
        height 58.1vw
        border-radius:2.1vw;
        background:rgba(255,255,255,1) 
        padding:6.5vw 8.7vw 0
        box-sizing: border-box   
        .title{
        text-align: center
        font-size:4vw;
        font-family:Microsoft YaHei;
        font-weight:bold;
        color:rgba(51,51,51,1);
        line-height:4.3vw; 
        position relative    
        z-index 999
    }
        .border{
        width 20.3vw
        height 1.6vw
        background rgba(255,198,56,1)
        position absolute
        left: 0
        right 0
        margin 0 auto 
        top:10vw
    }  
        .formBox{
            margin-top:12.7vw
            text-align: center
            border-bottom:1px solid rgba(153,153,153,1);
            padding-bottom: 3.3vw
            input {
                width:26.3vw;
                height:3.2vw;
                font-size:3.2vw;
                font-family:Microsoft YaHei;
                font-weight:400;
                color:rgba(153,153,153,1);
                line-height:4.3vw;
                border:0
                text-align: center 
            }
        }
        .errMessage{
            width:41.9vw
            height:3.3vw
            font-size:3.2vw
            font-family:Microsoft YaHei
            font-weight:400
            color:rgba(234,79,50,1)
            line-height:4.3vw
            text-align: center
            margin:3.9vw auto 0        
        }
        .submit{
            width:34.7vw;
            height:10.1vw;
            background:linear-gradient(0deg,rgba(254,179,54,1) 0%,rgba(255,198,56,1) 100%);
            border-radius:4.8vw;
            font-size:3.7vw;
            font-family:Microsoft YaHei;
            font-weight:bold;
            color:rgba(255,255,255,1);
            text-shadow:0px 0.3vw 0.7vw rgba(234,155,24,0.52); 
            text-align: center
            line-height: 10.1vw
            position absolute
            bottom:6.3vw
            left 0
            right 0
            margin: auto
            box-shadow: 0 0.5vw 1vw  rgba(0,0,0,0.5);
        }
        .close{
            img {
                width 3.7vw
                height 3.7vw
                display inline-block
            }
            position absolute
            right: 3.6vw
            top: 3.1vw
        
        }
    }
    
}